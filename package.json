{
	"name": "enamelpin.club",
	"version": "0.0.0",
	"description": "Source for https://enamelpin.club/",
	"main": "src/js/entry.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ncovercash/enamelpin.club.git"
	},
	"license": "AGPL-3.0-only",
	"author": "Noah Overcash <me@ncovercash.dev>",
	"bugs": {
		"url": "https://github.com/ncovercash/enamelpin.club/issues"
	},
	"homepage": "https://enamelpin.club/",
	"dependencies": {
		"@types/jquery": "^3.5.5",
		"axios": "^0.21.1",
		"debug": "^4.3.1",
		"fibers": "^5.0.0",
		"foundation-sites": "^6.6.3",
		"jquery": "^3.5.1",
		"node-sass": "^5.0.0",
		"randomstring": "^1.1.5",
		"sass": "^1.30.0",
		"supports-webp": "^2.0.1",
		"what-input": "^5.2.10",
		"when-dom-ready": "^1.2.12"
	},
	"devDependencies": {
		"@prettier/plugin-php": "^0.16.1",
		"@types/debug": "4.1.5",
		"@types/when-dom-ready": "1.2.0",
		"@typescript-eslint/eslint-plugin": "4.11.0",
		"@typescript-eslint/parser": "4.11.0",
		"css-loader": "5.0.1",
		"eslint": "7.16.0",
		"husky": "4.3.6",
		"lint-staged": "10.5.3",
		"prettier": "^2.2.1",
		"sass-loader": "10.1.0",
		"style-loader": "2.0.0",
		"ts-loader": "8.0.12",
		"typescript": "4.1.3",
		"webpack": "5.11.0",
		"webpack-cli": "4.3.0",
		"webpack-merge": "5.7.3"
	},
	"scripts": {
		"build": "webpack",
		"build-dev": "webpack -w",
		"pretty": "npm run pretty-js && npm run pretty-json && npm run pretty-scss && npm run pretty-php && npm run pretty-html && npm run pretty-www",
		"pretty-scss": "prettier --write 'src/scss/**/*.scss'",
		"pretty-php": "prettier --write 'src/php/**/*.php'",
		"pretty-json": "prettier --write '*.json'",
		"pretty-js": "prettier --write 'src/js/**/*.{js,ts,json}'",
		"pretty-html": "prettier --write 'src/html/**/*.php'",
		"pretty-www": "prettier --write 'www/*.php'",
		"lint": "npm run lint-js && npm run lint-php",
		"lint-js": "npx eslint src/js/**/*.ts",
		"lint-php": "./src/php/vendor/bin/phan -d . -l ./src/php/ -l ./www/ -l ./src/html/ -k ./src/php/.phan/config.php",
		"postinstall": "npm run build && composer install -d src/php"
	},
	"lint-staged": {
		"src/js/**/*.{js,ts}": [
			"prettier --write",
			"eslint"
		],
		"src/scss/**/*.scss": [
			"prettier --write"
		],
		"src/php/**/*.php": [
			"prettier --write",
			"./src/php/.phan/phan-enumerated-wrapper.sh"
		],
		"src/html/**/*.php": [
			"prettier --write",
			"./src/php/.phan/phan-enumerated-wrapper.sh"
		],
		"www/*.php": [
			"prettier --write",
			"./src/php/.phan/phan-enumerated-wrapper.sh"
		],
		"*.{json}": [
			"prettier --write"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "npx lint-staged && npm run build"
		}
	}
}
